<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 630">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0f172a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1e293b;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="accentGrad" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2563eb;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Grid pattern -->
  <defs>
    <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#334155" stroke-width="0.5" opacity="0.3"/>
    </pattern>
  </defs>
  <rect width="1200" height="630" fill="url(#grid)"/>
  
  <!-- Logo/Icon area -->
  <rect x="80" y="180" width="120" height="120" rx="20" fill="url(#accentGrad)"/>
  
  <!-- Network topology icon in logo -->
  <circle cx="140" cy="220" r="12" fill="white" opacity="0.9"/>
  <circle cx="110" cy="260" r="12" fill="white" opacity="0.9"/>
  <circle cx="170" cy="260" r="12" fill="white" opacity="0.9"/>
  <circle cx="140" cy="280" r="12" fill="white" opacity="0.9"/>
  
  <line x1="140" y1="220" x2="110" y2="260" stroke="white" stroke-width="3" opacity="0.6"/>
  <line x1="140" y1="220" x2="170" y2="260" stroke="white" stroke-width="3" opacity="0.6"/>
  <line x1="110" y1="260" x2="140" y2="280" stroke="white" stroke-width="3" opacity="0.6"/>
  <line x1="170" y1="260" x2="140" y2="280" stroke="white" stroke-width="3" opacity="0.6"/>
  
  <!-- Activity pulse -->
  <circle cx="140" cy="220" r="6" fill="#10b981">
    <animate attributeName="r" values="6;10;6" dur="2s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="1;0.3;1" dur="2s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Title -->
  <text x="240" y="250" font-family="Arial, sans-serif" font-size="64" font-weight="bold" fill="white">
    Network Health Monitor
  </text>
  
  <!-- Subtitle -->
  <text x="240" y="300" font-family="Arial, sans-serif" font-size="32" fill="#94a3b8">
    IT/OT Convergence Dashboard
  </text>
  
  <!-- Features boxes -->
  <g opacity="0.8">
    <!-- Feature 1 -->
    <rect x="240" y="350" width="280" height="80" rx="10" fill="#1e40af" opacity="0.3"/>
    <text x="260" y="380" font-family="Arial, sans-serif" font-size="18" font-weight="600" fill="#60a5fa">
      Real-time Monitoring
    </text>
    <text x="260" y="405" font-family="Arial, sans-serif" font-size="14" fill="#94a3b8">
      Live network health tracking
    </text>
    
    <!-- Feature 2 -->
    <rect x="540" y="350" width="280" height="80" rx="10" fill="#7c3aed" opacity="0.3"/>
    <text x="560" y="380" font-family="Arial, sans-serif" font-size="18" font-weight="600" fill="#a78bfa">
      3D Topology
    </text>
    <text x="560" y="405" font-family="Arial, sans-serif" font-size="14" fill="#94a3b8">
      Interactive visualization
    </text>
    
    <!-- Feature 3 -->
    <rect x="840" y="350" width="280" height="80" rx="10" fill="#059669" opacity="0.3"/>
    <text x="860" y="380" font-family="Arial, sans-serif" font-size="18" font-weight="600" fill="#34d399">
      AI Insights
    </text>
    <text x="860" y="405" font-family="Arial, sans-serif" font-size="14" fill="#94a3b8">
      Predictive analytics
    </text>
  </g>
  
  <!-- Status indicator -->
  <g>
    <circle cx="1050" cy="550" r="8" fill="#10b981">
      <animate attributeName="opacity" values="1;0.5;1" dur="1.5s" repeatCount="indefinite"/>
    </circle>
    <text x="1070" y="556" font-family="Arial, sans-serif" font-size="16" fill="#94a3b8">
      System Active
    </text>
  </g>
</svg>
